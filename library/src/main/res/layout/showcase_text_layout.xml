<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor"
    android:minHeight="@dimen/showcase_text_layout_minimum_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginEnd="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginLeft="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginRight="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginStart="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginTop="@dimen/showcase_layout_text_vertical_margin"
        android:text="Large Text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginLeft="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginRight="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_marginStart="@dimen/showcase_layout_text_horizontal_margin"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="Medium Text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/button"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/showcase_layout_button_vertical_margin"
        android:layout_marginEnd="@dimen/showcase_layout_button_horizontal_margin"
        android:layout_marginRight="@dimen/showcase_layout_button_horizontal_margin"
        android:text="Got it" />
</LinearLayout>