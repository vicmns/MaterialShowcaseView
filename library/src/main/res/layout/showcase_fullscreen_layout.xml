<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical">


    <TextView
        android:id="@+id/showcase_title"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="New Text" />

    <TextView
        android:id="@+id/showcase_description"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/showcase_layout_button_horizontal_margin"
        android:layout_marginRight="@dimen/showcase_layout_button_horizontal_margin"
        android:layout_marginStart="@dimen/showcase_layout_button_horizontal_margin"
        android:layout_marginLeft="@dimen/showcase_layout_button_horizontal_margin"
        android:text="New Text" />

    <com.vicmns.library.external.FloatingActionButton
        android:id="@+id/showcase_button"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/fab_showcase_next_background"
        android:elevation="5dp"
        app:fabCenterDrawable="@drawable/ic_arrow_forward"
        app:fabSize="normal" />
</RelativeLayout>